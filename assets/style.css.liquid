@import url('https://fonts.cdnfonts.com/css/mont');

@font-face {
  font-family: 'Mont';
  src: url('Mont-HeavyDEMO.otf');
}

@font-face {
  font-family: 'Mont light';
  src: url('Mont-ExtraLightDEMO.otf');
}

*,
*:before,
*:after {
  font-family: 'Mont light', sans-serif;
  margin: 0;
  padding: 0;
  box-sizing: border-box;

}

.lower_header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: 800;
}

.sticky {
  position: fixed;
  top: 0;
  width: 100%;
}

.upper-header {
  background-color: #11346F;
  padding: 10px 0;
}

.upper-header_text {
  /* font-family: 'Mont'; */
  font-size: 14px;
  font-style: bold;
  font-weight: 800px;
  color: white;
  text-align: center;
  text-transform: uppercase;
}

.upper-header_text span {
  padding-left: 5px;
}